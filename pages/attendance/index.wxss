page {
    background: linear-gradient(
      0deg,
      rgba(161, 140, 209, 0.2) 0%,
      rgba(251, 194, 235, 0.2) 100%
    );
}
  
.container {
    padding: 20rpx;
}
  
.header {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
  
.header > view {
    border-radius: 20rpx;
    background: rgba(255, 255, 255, 0.82);
    box-shadow: 0px 0px 10px -20px rgba(0, 0, 0, 0.05);
    height: 100rpx;
}
.score-term {
    width: 200rpx;
    padding: 8rpx 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22rpx;
    color: #3b3b3b;
}
  
.score-list {
    width: 100%;
    border-radius: 20rpx;
    background: #fafafa;
    box-shadow: 0px 0px 10rpx -20rpx rgba(0, 0, 0, 0.05);
    margin-top: 26rpx;
    padding: 30rpx;
}
.term-name {
    font-size: 32rpx;
    color: #555555;
    text-align: center;
}
.update-btn {
    width: 100rpx;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    color: #E065E0;
}

.attendance-list {
    width: 100%;
    border-radius: 20rpx;
    background: #fafafa;
    box-shadow: 0px 0px 10rpx -20rpx rgba(0, 0, 0, 0.05);
    margin-top: 26rpx;
    padding: 30rpx;
}