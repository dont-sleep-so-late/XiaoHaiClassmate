page {
    background: #fafafa;
  }
  
  .info-box {
    background-color: #fff;
    padding: 30rpx 30rpx 0;
  }
  
  .info-list {
    margin-top: 10rpx;
  }
  
  .info-item {
    display: flex;
    align-items: center;
    padding: 24rpx 0;
  }
  
  .info-item:not(:last-child) {
    border-bottom: 1rpx solid rgba(243, 243, 243, 0.82);
  }
  
  .info-item__key {
    color: #333333;
    margin-right: 100rpx;
    margin-left: 30rpx;
  }
  
  .info-item__val {
    color: #666666;
  }